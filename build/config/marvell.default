# => -DPLATFORM_marvell
HILDA_PLATFORM := marvell
# yes => -g3, no => -O3
HILDA_DEBUG := yes

# Will Add the $PATH
GCC_PATH += /usr/local/arm-marvell-linux-gnueabi/bin

INCDIR += -I /opt/MV88DE3010_SDK/Linux/rootfs/rootfs_release/rootfs_packages/marvell_tools-0.1/usr/local/arm-marvell-linux-gnueabi/libc/usr/include
INCDIR += -I /opt/MV88DE3010_SDK/Customization_Data/File_Systems/application/include
INCDIR += -I /opt/MV88DE3010_SDK/Linux/rootfs/rootfs_release/rootfs_packages/expat-2.0.1/usr/include

LIBS += -L /opt/MV88DE3010_SDK/Linux/rootfs/rootfs_release/rootfs_packages/marvell_tools-0.1/usr/local/lib
LIBS += -L /opt/MV88DE3010_SDK/Customization_Data/File_Systems/rootfs/usr/lib
LIBS += -L /opt/MV88DE3010_SDK/Customization_Data/File_Systems/application/lib
LIBS += -L /opt/MV88DE3010_SDK/Linux/rootfs/rootfs_release/rootfs_packages/expat-2.0.1/usr/lib

LIBS += -lexpat -lpthread -lrt -ldl
 
# DEFINES += -DAAA -DBBB
DEFINES += -D_REENTRANT -D_LARGEFILE64_SOURCE

CFLAGS += -fno-strict-aliasing 
LDFLAGS +=

CROSS_COMPILE := arm-marvell-linux-gnueabi-
CC := ccache $(CROSS_COMPILE)gcc
AR := $(CROSS_COMPILE)ar
LD := $(CROSS_COMPILE)ld
RM = rm
OS = linux

